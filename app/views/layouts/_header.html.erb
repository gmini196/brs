<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <% if signed_in_admin? %>
      <%= link_to "Admin Books Store", admin_books_path, id: "logo" %>
      <% else %>
      <%= link_to "Framgia Books Store", root_path, id: "logo" %>
      <% end %>
      <nav>
        <ul class="nav pull-right">
        <% if !signed_in_admin? %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Books", books_path %></li>
          <li><%= link_to "Search", searchs_path %></li>
          <% if signed_in? %>
            <li><%= link_to "Reading Books", readings_path %></li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        <% else %>
          <li><%= link_to "List Books", admin_books_path %></li>
          <li><%= link_to "List Users", admin_users_path %></li>
          <li><%= link_to "List Request Buy", "#" %></li>
          <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <%=@current_admin.username%><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to "Sign out", admin_signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
        <% end%>
        </ul>
      </nav>
    </div>
  </div>
</header>
