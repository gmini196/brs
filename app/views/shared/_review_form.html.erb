<%= form_for(@review) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="title">
    <%= f.text_field :content_review, placeholder: "Compose new title..." %>
  </div>
  <div class="content">
    <%= f.text_area :review_title, placeholder: "Compose new review..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>

